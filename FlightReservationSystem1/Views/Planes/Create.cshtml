@model FlightReservationSystem1.Models.Plane

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Plane</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type">Plane Type:</label>
                <select asp-for="Type" id="Type" class="form-control" placeholder="Plane Type" required>
                    <option value="Standard">Standard</option>
                    <option value="Private">Private</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TotalSeat" class="control-label"></label>
                <select asp-for="TotalSeat" id="TotalSeat" class="form-control" placeholder="Total Seat" required>
                    <option value="150">150</option>
                    <option value="300">300</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}    
