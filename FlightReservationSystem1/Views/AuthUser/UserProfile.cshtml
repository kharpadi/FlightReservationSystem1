@using FlightReservationSystem1.Areas.Identity.Data
@model ApplicationUser

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/user-profile.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text"><strong>Name:</strong> @Model.Name</p>
                        <p class="card-text"><strong>Surname:</strong> @Model.Surname</p>
                        <p class="card-text"><strong>Email:</strong> @Model.Email</p>

                        <div class="btn-group" role="group" aria-label="Profile Actions">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
                            <a asp-action="DeleteAccount" asp-route-id="@Model.Id" class="btn btn-info">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
