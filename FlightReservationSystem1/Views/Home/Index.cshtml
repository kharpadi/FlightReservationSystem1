@{
    int rowCount = 10; // Toplam satır sayısı
    int seatsPerRow = 6; // Her satırdaki koltuk sayısı

    // Tanımlanan değişkenleri view'a aktarma
    ViewBag.rowCount = rowCount;
    ViewBag.seatsPerRow = seatsPerRow;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uçak Koltuk Seçimi</title>
    <link rel="stylesheet" href="~/css/SeatStyle.css">
    <script src="~/js/SeatStyle.js"></script>
</head>
<body>
    <h2>Koltuk Seçimi</h2>

    <form action="/SeatSelection" method="post">
        @for (int i = 0; i < ViewBag.rowCount; i++)
        {
            var rowLetter = (char)('A' + i); // Satırdaki harfi oluştur
            <div class="seat-row">
                @for (int j = 1; j <= ViewBag.seatsPerRow; j++)
                {
                    var seatName = $"{rowLetter}{j}";
                    var isSeatAvailable = IsSeatAvailable(seatName); // Koltuk müsait mi?

                    <label class="seat-label @GetSeatColor(seatName)">
                        <input type="checkbox" class="seat-checkbox" name="selectedSeats[]" value="@seatName" @(!isSeatAvailable ? "disabled" : "")>
                        @seatName
                    </label>
                }
            </div>
        }

        <button type="submit">Koltukları Seç</button>
    </form>
</body>
</html>
